{% extends 'home.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="display-3">Category List</h2>
        <div>
           <table class="table">
               <thead class="thead-inverse">
               <tr>
                   <th>Name</th>
                   <th>Description</th>
               </tr>
               </thead>
               {% for item in categories %}
                   <tr>
                       <td><a href="{{ path('category_show',{'id': item.id}) }}">{{ item.name }}</a></td>
                       <td>{{ item.description }}</td>
                   </tr>
               {% endfor %}
           </table>
            <a href="{{ path('homepage') }}" class="btn btn-danger">All Books</a>
        </div>
    </div>
{% endblock %}
